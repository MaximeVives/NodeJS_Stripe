<section class="content">

    <h1 class="title">A short story <span>ATOM</span></h1>

    <div class="bodymovinanim"></div>

    <script src="/anim/lottie.js" type="text/javascript"></script>
    <script>
        //Play an animation back on second click

        let iconMenu = document.querySelector('.bodymovinanim');

        let animationMenu = bodymovin.loadAnimation({
            container: iconMenu,
            renderer: 'svg',
            loop: true,
            autoplay: true,
            path: "/anim/data.json"
        });
        animationMenu.play();
    </script>
</section>